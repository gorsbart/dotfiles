[include]
  path = .gitconfig-credentials

; [diff]
;     tool = kitty
;     guitool = kitty.gui
; [difftool]
;     prompt = false
;     trustExitCode = true
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE

[core]
    pager = delta -s --hyperlinks

[blame]
    pager = delta -s --hyperlinks


[interactive]
    diffFilter = delta --color-only --paging=never --line-numbers --hyperlinks -s

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    line-numbers = true
    # style the moved blocks differently
    map-styles = bold purple => syntax magenta, bold cyan => syntax blue

[merge]
  conflictstyle = zdiff3
  tool = nvim
  guitool = nvim

[mergetool "nvim"]
    ; cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\" -c DiffviewOpen"
    cmd = "nvim -d -c \"MergeviewOpen\" -c \"norm ]c\" -c \"tabonly\""

[difftool]
  prompt = false
  trustExitCode = true


[difftool "delta.gui"]
  cmd = git diff $LOCAL $REMOTE | delta -s --color-only --line-numbers --hyperlinks | nvim

[difftool "delta"]
  cmd = git diff $LOCAL $REMOTE | delta -s --color-only --line-numbers --hyperlinks  

[diff]
  tool = nvimdiff
  guitool = nvimdiff
  colorMoved = default
